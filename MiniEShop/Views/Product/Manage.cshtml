@{
    ViewBag.Title = "Manage";
}

<div ng-app="eshopApp" ng-controller="ProductController">
    <h2>Manage Products</h2>

    <label for="lsProductName">Live search (By product name):</label>
    <input id="lsProductName" type="text" placeholder="search..." ng-model="liveSearch" />
    <a class="btn btn-default">New</a>
    <hr>
    <h4 class="header header-small grey">Product list</h4>
    @* Product List *@
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                @*| filter:query*@
                <ul class="thumbnails">
                    <li ng-repeat="product in allProducts | orderBy:sortorder">
                        @*| limitTo:2*@
                        <a> {{product.ProductName}}</a>
                    </li>
                </ul>
            </div>
            @*Edit Product*@
            <div class="col-md-6">
                @* <form class="form-inline" role="form"> *@
                @* Vertical no class on labels, no class on form *@
                <form name="editProductForm" class="form-horizontal" role="form">
                    @*ng-submit="updateProduct()"*@                    
                    <div class="form-group">
                        <label class="control-label col-sm-4" for="productName">Product name:</label>
                        <input focus id="productName" class="form-control" required ng-pattern="/^[-A-Za-z0-9]{2,20}$/" type="text" placeholder="Product name..." ng-model="product.Productname"/>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4" for="productType">Product type:</label>
                        <input id="productType" class="form-control" type="number" placeholder="ProductType..." ng-model="product.ProductType"/>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4" for="description">Description:</label>
                        <input id="description" class="form-control" type="text" placeholder="Description..." ng-model="product.Description"/>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4" for="stock">Stock:</label>
                        <input id="stock" class="form-control" type="number" placeholder="Stock..." ng-model="product.Stock"/>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4" for="price">Price:</label>
                        <input id="price" class="form-control" type="number" placeholder="Price..." ng-model="product.Price"/>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-4 col-sm-8">
                            <button type="submit" ng-disabled="newProductForm.$invalid" ng-click="saveEvent(product, newProductForm)" class="btn btn-primary">Save</button>
                            <button type="button" ng-click="cancelProduct()" class="btn btn-default">Cancel</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/angular.js" ng:autobind></script>
<script src="~/Scripts/angular-resource.js" ng:autobind></script>
<script src="~/Scripts/angular-route.js" ng:autobind></script>
<script src="~/Scripts/angular/app.js"></script>
<script src="~/Scripts/angular/services/ProductData.js"></script>
<script src="~/Scripts/angular/controllers/ProductController.js"></script>

