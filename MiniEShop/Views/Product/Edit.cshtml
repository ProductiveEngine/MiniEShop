<div ng-controller="EditProductController" style="padding-left:20px; padding-right:20px">
    <div class="container">
        <h1>New Product</h1>
        <hr>
        <form name="newProductForm">
            @*ng-submit="updateProduct()"*@
            <div class="row-fluid">
                <fieldset>
                    <label for="productName">Product name:</label>
                    <input focus id="productName" required ng-pattern="/^[-A-Za-z0-9]{2,20}$/" type="text" placeholder="Product name..." ng-model="product.Productname" />
                    <label for="productType">Product type:</label>
                    <input id="productType" type="number" placeholder="ProductType..." ng-model="product.ProductType" />
                    <label for="description">Product type:</label>
                    <input id="description" type="text" placeholder="Description..." ng-model="product.Description" />
                    <label for="stock">Product type:</label>
                    <input id="stock" type="number" placeholder="Stock..." ng-model="product.Stock" />
                    <label for="price">Product type:</label>
                    <input id="price" type="number" placeholder="Price..." ng-model="product.Price" />
                </fieldset>
            </div>
            <button type="submit" ng-disabled="newProductForm.$invalid" ng-click="saveEvent(product, newProductForm)" class="btn btn-primary">Save</button>
            <button type="button" ng-click="cancelProduct()" class="btn btn-default">Cancel</button>
        </form>
    </div>
</div>
